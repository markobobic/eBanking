@model EBanking.Models.Racun
@{
    ViewBag.Title = "Update";
}

<h2>Izmena racuna za: @Model.NosilacRacuna</h2>
<h4>Broj racuna: @Model.BrojRacuna</h4>


<form method="post">
    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="form-group">
        @Html.LabelFor(m => m.NosilacRacuna)
        <input type="text" value="@Model.NosilacRacuna" class="form-control" name="NosilacRacuna" />
        @Html.ValidationMessageFor(m => m.NosilacRacuna)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BrojRacuna)
        <input type="text" value="@Model.BrojRacuna" class="form-control" name="BrojRacuna" />
        @Html.ValidationMessageFor(m => m.BrojRacuna)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OnlineBanking)
        <input type="checkbox" value="true" name="OnlineBanking" @(Model.OnlineBanking ? "checked='checked'" : string.Empty) />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Aktivan)
        <input type="checkbox" value="true" name="Aktivan" @(Model.Aktivan ? "checked='checked'" : string.Empty) />
    </div>
    <input type="submit" value="Sacuvaj izmene" class="btn btn-primary" />
</form>
<br />
@Html.ActionLink("Nazad", "Index")
